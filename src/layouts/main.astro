---
import '../../generated/fonts.css';
import '../site-components/global.css';
import '../styles/global.css';
import '../styles/reshapex-brand.css';

const { pageClass = '' } = Astro.props;
---

<html lang="en" class={pageClass}>
<head>
<meta charset="utf-8" />
<link rel="icon" type="image/png" href="/favicon.ico" />
<meta name="viewport" content="width=device-width" />
<meta name="generator" content={Astro.generator} />
<title>ReshapeX AI Readiness Assessment</title>
<meta name="description" content="A 2-minute diagnostic assessment to evaluate your AI automation readiness and identify opportunities for operational efficiency." />
</head>
<body class="rx-theme rx-bg-deep-space">
<slot />
</body>
</html>

<style is:global>
/* Page-specific overrides */
html.splash main { 
display: flex !important; 
}

html.splash ol,
html.splash ul { 
padding-left: 0 !important; 
margin: 0 !important; 
}

/* ReshapeX brand font override */
body, p, a, div, button, input, textarea, select {
font-family: 'General Sans', 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
}

h1, h2, h3, h4, h5, h6 {
font-family: 'General Sans', 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
font-weight: 700;
}
</style>
